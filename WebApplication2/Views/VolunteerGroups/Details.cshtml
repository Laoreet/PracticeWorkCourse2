@model WebApplication2.DataObjects.VolunteerGroup

@{
    ViewData["Title"] = "Details";
}

<h1>Подробности</h1>

<div>
    <h4>Волонтерская группа @Model.VolunteerGroupId</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WorkType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WorkType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Station)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Station.StationName)
        </dd>
    </dl>
</div>
<div>
    @if (DB.status != "client" && DB.status != "guest")
                    {
    <a asp-action="Edit" asp-route-id="@Model?.VolunteerGroupId" class="btn btn-sm btn-info"><i class="fa fa-pencil fa-lg"></i></a> 
                    }
    <a asp-action="Index">Назад</a>
</div>
