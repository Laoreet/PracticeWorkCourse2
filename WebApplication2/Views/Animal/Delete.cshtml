@model WebApplication2.DataObjects.Animal

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>

<h3>Вы уверены, что хотите удалить животное @Model.AnimalId?</h3>
<div>
    <hr />
    <dl class="row">
        <div class="col-lg-1">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AnimalSex)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AnimalSex)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Age)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Coloring)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Coloring)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Breed)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Breed)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Specificity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Specificity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.History)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.History)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AnimalType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AnimalType.AnimalTypeName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Station)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Station.StationName)
            </dd>
        </div>

        <div class="col-4">
            @*<dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Photo)
            </dt>*@
            <dd class="col-sm-10">
                <img style="max-height:450px; max-width: 450px;" src="@Url.Action("RenderImage", new {id = Model.AnimalId})" alt="" />
            </dd>
        </div>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AnimalId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
