@model WebApplication2.DataObjects.Animal

@{
    ViewData["Title"] = "AnalogView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Аналоговый вид</h1>

<div style="align-content: center">
    <h4>Животное</h4>
    <hr />
    <dl class="row" style="align-items: center; align-self: center; margin-left: 20%;
border:groove; 
background: rgb(255,255,255);
background: linear-gradient(180deg, rgba(255,255,255,1) 0%, rgba(219,211,246,1) 100%);
min-width: 640px; max-width: 700px;">
        <div style="align-self: center">
            <img src="@Url.Action("RenderImage", new {id = Model?.AnimalId})" alt="" style="max-height: 400px; max-width:400px; align-self: center" />
        </div>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AnimalSex)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnimalSex)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coloring)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coloring)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Breed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Breed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Specificity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Specificity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.History)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.History)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AnimalType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnimalType.AnimalTypeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Station)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Station.StationName)
        </dd>
    </dl>
    <div>
        <a asp-area="" asp-controller="Animal" asp-action="AnalogViewPrev" class="btn btn-sm btn-primary ml-1">Предыдущий</a>
        <a asp-area="" asp-controller="Animal" asp-action="AnalogViewNext" class="btn btn-sm btn-primary ml-2">Следующий</a>
    </div>
</div>
