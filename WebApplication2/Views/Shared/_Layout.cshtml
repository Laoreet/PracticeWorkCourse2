<!DOCTYPE html>
<html lang="en">
<div class="layout_main">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - WebApplication2</title>


        @*    <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=Edge">
        <meta name="description" content="">
        <meta name="keywords" content="">
        <meta name="author" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

        <link rel="stylesheet" href="css/bootstrap.min.css">
        <link rel="stylesheet" href="css/font-awesome.min.css">
        <link rel="stylesheet" href="css/aos.css">
        <link rel="stylesheet" href="css/owl.carousel.min.css">
        <link rel="stylesheet" href="css/owl.theme.default.min.css">

        <!-- MAIN CSS -->
        <link rel="stylesheet" href="css/templatemo-digital-trend.css">*@


        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/WebApplication2.styles.css" asp-append-version="true" />
        <script src="https://kit.fontawesome.com/0e84072b0c.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-sm navbar-nav-scroll navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-paw fa-2x"></i> ССП <br> ZOOHELP</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                        <ul class="navbar-nav">

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Station" asp-action="Index">Станции</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Animal" asp-action="Index">Животные</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="AnimalTypes" asp-action="Index">Виды животных</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="VolunteerGroups" asp-action="Index">Волонтерские группы</a>
                            </li>

                            @if (DB.status != "guest" && DB.status!="client")
                            {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="CarrierVolunteers" asp-action="Index">Волонтеры-перевозчики</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Volunteers" asp-action="Index">Волонтеры</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="VolunteerOrganizations" asp-action="Index">Волонтерские организации</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="VolunteerApplications" asp-action="Index">Волонтерские заявки</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="AnimalApplications" asp-action="Index">Заявки на животных</a>
                            </li>
                            }

                            @if (DB.status == "admin" || DB.status == "director")
                            {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Workers" asp-action="Index">Работники</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Donations" asp-action="Index">Пожертвования</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="DonationTypes" asp-action="Index">Виды пожертвований</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Donators" asp-action="Index">Благотворители</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Пользователи</a>
                            </li>
                            }

                        
                        
                    @*<li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>*@
                    </ul>
                        
                </div>
                    <div style="justify-content: right; align-self: end; align-content:center;">
                        @if(DB.status=="guest")
                        {
                        <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Registration">Регистрация</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Login">Авторизация</a>
                        }
                        else
                        {
                            <a class="nav-link text-dark">@DB.RuLang[DB.status]</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Logout" >Выход</a>
                        }
                    </div>
                </div>
            </nav>
        </header>


        <div class="wrapper">
            <div class="pull-left">
                <main role="main" >


                    @*<partial name="_CreateModalDialog" />*@

                    @RenderBody()
                </main>
            </div>
        </div>

        <div class="description">
            <header>
                
            </header>
        </div>

        <div class="for_footer">
            <footer class="footer text-muted">
                <div class="container">
                    &copy; 2023 - НИУ ВШЭ - Пермь, Кирьянов Сергей, ПИ-21-3
                </div>
            </footer>
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</div>
</html>
